<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên món ăn" />

    <EditText
        android:id="@+id/etImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hình ảnh" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vùng miền:"
        android:textStyle="bold"
        android:textColor="#979797"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <Spinner
        android:id="@+id/spnRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại đặc sản:"
        android:textStyle="bold"
        android:textColor="#979797"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <Spinner
        android:id="@+id/spnLoaiMonAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etLichsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lịch sử" />

    <EditText
        android:id="@+id/etSangtao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sáng tạo" />

    <EditText
        android:id="@+id/etCongThuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Công thức" />

    <Button
        android:id="@+id/btnSubmit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm đặc sản" />

</LinearLayout>
